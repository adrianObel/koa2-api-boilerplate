{
    "compilerOptions": {
      "target": "es5",                          
      "module": "esnext",                
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": [ "node" ],
      "typeRoots": [ "../node_modules/@types" ]
    }
  }
